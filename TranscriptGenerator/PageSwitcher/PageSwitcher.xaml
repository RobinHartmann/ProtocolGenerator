<Window x:Class="TranscriptGenerator.PageSwitcher.PageSwitcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350" Width="525"
        MinHeight="325" MinWidth="375">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Name="pageArea" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Grid.Row="1" Grid.Column="0" Name="btnBack" Content="Back" Click="btnBack_Click" IsEnabled="False"/>
        <Button Grid.Row="1" Grid.Column="1" Name="btnContinue" Content="Continue" Click="btnContinue_Click" IsEnabled="False"/>
    </Grid>
</Window>
